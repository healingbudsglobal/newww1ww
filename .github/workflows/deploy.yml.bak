name: Auto Deploy to cPanel (Validated)

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    defaults:
      run:
        shell: bash

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Verify GitHub Workspace
        run: |
          echo "Current workspace:"
          pwd
          echo "Workspace contents:"
          ls -la
          if [ ! -f "index.php" ] && [ ! -f "index.html" ]; then
            echo "ERROR: No index.php or index.html found in repo root"
            exit 1
          fi

      - name: Setup SSH
        run: |
          mkdir -p ~/.ssh
          echo "${{ secrets.CPANEL_SSH_KEY }}" > ~/.ssh/id_ed25519
          chmod 600 ~/.ssh/id_ed25519
          ssh-keyscan -H "${{ secrets.CPANEL_HOST }}" >> ~/.ssh/known_hosts

      - name: Verify cPanel Target Directory
        run: |
          ssh ${{ secrets.CPANEL_USER }}@${{ secrets.CPANEL_HOST }} "
            if [ ! -d '${{ secrets.CPANEL_PATH }}' ]; then
              echo 'Target directory does not exist. Creating it...'
              mkdir -p '${{ secrets.CPANEL_PATH }}'
            fi
            echo 'Target directory verified:'
            ls -la '${{ secrets.CPANEL_PATH }}'
          "

      - name: Deploy to cPanel
        run: |
          rsync -avz --delete \
          --exclude=".git" \
          --exclude=".github" \
          ./ \
          ${{ secrets.CPANEL_USER }}@${{ secrets.CPANEL_HOST }}:${{ secrets.CPANEL_PATH }}

      - name: Post-Deploy Verification
        run: |
          ssh ${{ secrets.CPANEL_USER }}@${{ secrets.CPANEL_HOST }} "
            echo 'Deployment complete. Live directory contents:'
            ls -la '${{ secrets.CPANEL_PATH }}'
          "
